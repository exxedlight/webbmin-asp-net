@model TableModel
@{
    ViewData["Title"] = "Vector";
}

<link rel="stylesheet" href="~/css/vector.css" />

<form class="VectorForm" asp-action="Min" method="POST">
    <h1 class="TextMainItemH">Vector input page</h1>
    <p class="TextMainItemP">There are a field to print your DDNF sets numbers</p>
    <p class="TextMainItemP">Put it that way: {1 3 5 7} without {}, just numbers and spaces between them</p>
    <p class="TextMainItemP">After entering, please, press a button down the page. Make sure that your function starts from digit, ends with digit too and have only one space between numbers :)</p>
    
    @Html.TextBoxFor(m => m.Vector, new {placeholder="DDNF set", @class="UserInput"})

    <div class="ButtonsChoose">
        <button class="Button">MINIMIZE IT</button>
    </div>
</form>